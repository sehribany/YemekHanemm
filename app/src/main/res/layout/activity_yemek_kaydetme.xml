<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EADFE3"
    android:padding="5dp"
    tools:context=".YemekKaydetme">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        >
        <CalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/takvimarkaplan">

        </CalendarView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <EditText
            android:id="@+id/txt_tarih"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textColorHint="#70000000"
            android:hint="Tarih">
        </EditText>

        <EditText
            android:id="@+id/txt_anayemek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textColorHint="#70000000"
            android:hint="Ana Yemek">
        </EditText>
        <EditText
            android:id="@+id/txt_icecek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textColorHint="#70000000"
            android:hint="İçecek">
        </EditText>

        <EditText
            android:id="@+id/txt_tatli"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textColorHint="#70000000"
            android:hint="Tatlı">
        </EditText>
        <EditText
            android:id="@+id/txt_meyve"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textColorHint="#70000000"
            android:hint="Meyve">
        </EditText>

        <EditText
            android:id="@+id/txt_fiyat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textColorHint="#70000000"
            android:hint="Fiyat">
        </EditText>
        <EditText
            android:id="@+id/txt_kisiSayisi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textColorHint="#70000000"
            android:hint="Kişi Sayısı">
        </EditText>

        <Button
            android:id="@+id/buttonyemekkayit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="yemekKaydet"
            android:text="Kaydet"
            android:background="@drawable/buttonarkaplan">

        </Button>
        <Button
            android:id="@+id/buttonlisteyeDon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="listeyeDon"
            android:text="Listeye Dön"
            android:background="@drawable/buttonarkaplan">

        </Button>

    </LinearLayout>


</LinearLayout>